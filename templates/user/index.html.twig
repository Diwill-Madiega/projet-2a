{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center"><strong>Utilisateurs</strong></h1>

        <div class="d-flex justify-content-between mb-4">
            <form class="form-inline" method="get" action="{{ path('app_user_index') }}">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <a href="{{ path('app_user_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer
            </a>
        </div>

        <div class="row">
            {% for user in users %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 anim" style="animation-delay: {{ loop.index0 * 0.2 }}s;">
                        <div class="card-body">
                            <h5 class="card-title">{{ user.firstName }} {{ user.lastName }}</h5>
                            <p class="card-text"><strong>Email:</strong> {{ user.email }}</p>
                            <p class="card-text"><strong>Roles:</strong> {{ user.roles ? user.roles|json_encode : '' }}</p>
                        </div>
                        <div class="card-footer text-center d-flex justify-content-between">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm mb-1">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm mb-1">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('user/_delete_form.html.twig', {'class': 'd-inline'}) }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center" role="alert">
                        Aucun utilisateur trouvé.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
