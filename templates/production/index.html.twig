{% extends 'base.html.twig' %}

{% block title %}Réalisations{% endblock %}


{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center anim"><strong>Historique des réalisations</strong></h1>
        <div class="d-flex justify-content-between mb-4 anim">

            <form class="form-inline" method="get" action="{{ path('app_production_index') }}">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <a href="{{ path('app_production_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer
            </a>
        </div>

        <hr class="anim" style="background-color:darkgray">

        <div class="row">
            {% for production in productions %}
                <div class="col-md-12 mb-12" style="padding :20px">
                    <div class="card h-100 anim shadow-sm" style="animation-delay: {{ loop.index0 * 0.2 }}s;">
                        <div class="card-body">
                            <h5 class="card-title"><strong>{{ production.name }}</strong></h5>
                        </div>
                        <div class="card-footer text-center d-flex">
                            <a href="{{ path('app_production_show', {'id': production.id}) }}" class="btn btn-info">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_production_edit', {'id': production.id}) }}" class="btn btn-primary" style="margin: 0px 10px 0px 10px;">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('production/_delete_form.html.twig', {'class': 'd-inline'}) }}
                        </div>
                    </div>
                </div>


        {% else %}
                <div class="col-12">
                    <div class="anim alert alert-warning text-center" role="alert">
                        Aucune réalisation trouvée.
                    </div>
                </div>
        {% endfor %}
        </div>
        </div>
{% endblock %}
