{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}

{% block body %}
    <h1>Machine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ machine.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ machine.description }}</td>
            </tr>
        </tbody>
    </table>

        <div class="mt-4">
            <a href="{{ path('app_machine_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_machine_edit', {'id': machine.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('machine/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
{% endblock %}
