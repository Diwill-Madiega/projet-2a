{% extends 'base.html.twig' %}

{% block title %}Operation{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1>Détails de l'opération</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ operation.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ operation.description }}</td>
            </tr>
            <tr>
                <th>Durée (min)</th>
                <td>{{ operation.duration }}</td>
            </tr>
        </tbody>
    </table>

        <div class="mt-4">
            <a href="{{ path('app_operation_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_operation_edit', {'id': operation.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('operation/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
{% endblock %}
