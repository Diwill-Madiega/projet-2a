<form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer ce poste?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
</form>
