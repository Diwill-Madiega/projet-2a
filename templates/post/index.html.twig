{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center anim"><strong>Postes de travail</strong></h1>
        <div class="d-flex justify-content-between mb-4 anim">

            <form class="form-inline" method="get" action="{{ path('app_post_index') }}">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <a href="{{ path('app_gamme_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer
            </a>
        </div>

        <hr class="anim" style="background-color:darkgray">

        <div class="row">
            {% for post in posts %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 anim shadow-sm" style="animation-delay: {{ loop.index0 * 0.2 }}s;">
                        <div class="card-body">
                            <h5 class="card-title"><strong>{{ post.name }}</strong></h5>
                        </div>
                        <div class="card-footer text-center d-flex justify-content-between">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('post/_delete_form.html.twig', {'class': 'd-inline'}) }}
                        </div>
                    </div>
                </div>


        {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center" role="alert">
                        Aucun poste trouvé.
                    </div>
                </div>
        {% endfor %}
        </div>
        </div>
{% endblock %}
