{% extends 'base.html.twig' %}

{% block title %}Poste{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1><strong>Détails du poste</strong></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Machines associées</th>
                <td>{{ post.machine ? post.machine|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

 <div class="mt-4">
            <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('post/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
</div>
{% endblock %}
