{% extends 'base.html.twig' %}

{% block title %}Ligne commande vente{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1><strong>Détails de la ligne de la commande de vente</strong></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sell_order_line.id }}</td>
            </tr>
            <tr>
            <tr>
                <th>Pièce</th>
                <td>{{ sell_order_line.piece.name }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ sell_order_line.amount }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ sell_order_line.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ sell_order_line.date ? sell_order_line.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        
        </tbody>
    </table>

        <div class="mt-4">
            <a href="{{ path('app_sell_order_line_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_sell_order_line_edit', {'id': sell_order_line.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('sell_order_line/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
</div>
{% endblock %}
