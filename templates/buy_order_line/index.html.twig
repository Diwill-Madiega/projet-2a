{% extends 'base.html.twig' %}

{% block title %}Lignes commandes achat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center anim"><strong>Lignes de commandes d'achat</strong></h1>
        <div class="d-flex justify-content-between mb-4 anim">

            <form class="form-inline" method="get" action="{{ path('app_buy_order_line_index') }}">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <a href="{{ path('app_buy_order_line_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer
            </a>
        </div>

        <hr class="anim" style="background-color:darkgray">

            <div class="row">
            {% for buy_order_line in buy_order_lines %}
                <div class="col-md-12 mb-12" style="padding :20px">
                    <div class="card h-100 anim shadow-sm" style="animation-delay: {{ loop.index0 * 0.2 }}s;">
                        <div class="card-body">
                            <p class="card-text"><strong><h3>Commande de {{ buy_order_line.amount }} {{ buy_order_line.piece.name }}</strong></h3></p>
                        </div>
                        <div class="card-footer text-center d-flex">
                            <a href="{{ path('app_buy_order_line_show', {'id':buy_order_line.id}) }}" class="btn btn-info">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            
                            <a href="{{ path('app_buy_order_line_edit', {'id': buy_order_line.id}) }}" class="btn btn-primary"  style="margin: 0px 10px 0px 10px;">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('buy_order_line/_delete_form.html.twig', {'class': 'd-inline'}) }}

                        </div>

                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="anim alert alert-warning text-center" role="alert">
                        Aucune ligne de commande d'achat trouvée.
                    </div>
                </div>
            {% endfor %}
{% endblock %}
