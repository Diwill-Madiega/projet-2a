{% extends 'base.html.twig' %}

{% block title %}Ligne de commande d'achat{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1><strong>Détails de la commande d'achat</strong></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ buy_order_line.id }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ buy_order_line.amount }}</td>
            </tr>
            <tr>
                <th>Pièce</th>
                <td>{{ buy_order_line.piece.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ buy_order_line.date ? buy_order_line.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fournisseur</th>
                <td>{{ buy_order_line.furnisher.name }}</td>
            </tr>
            
        </tbody>
    </table>

        <div class="mt-4">
            <a href="{{ path('app_buy_order_line_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_buy_order_line_edit', {'id': buy_order_line.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('buy_order_line/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
</div>
{% endblock %}

