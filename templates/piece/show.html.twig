{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}


{% block body %}
<div class="container mt-5">
    <h1><strong>Détails de la pièce</strong></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Réference</th>
                <td>{{ piece.ref }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ piece.name }}</td>
            </tr>
            {% if piece.buyPrice is not null %}
            <tr>
                <th>Prix d'achat</th>
                <td>{{ piece.buyPrice }}</td>
            </tr>
            {% endif %}
            {% if piece.sellPrice is not null %}
            <tr>
                <th>Prix de vente</th>
                <td>{{ piece.sellPrice }}</td>
            </tr>
            {% endif %}    
            {% if piece.gamme is not null %}
            <tr>
                <th>Gamme</th>
                <td>{{ piece.gamme }}</td>
            </tr>
            {% endif %}  
            <tr>
                <th>Unité</th>
                <td>{{ piece.unit }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ piece.stock }}</td>      
            </tr>
        </tbody>
    </table>

        <div class="mt-4">
            <a href="{{ path('app_piece_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_piece_edit', {'id': piece.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('piece/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
</div>
{% endblock %}