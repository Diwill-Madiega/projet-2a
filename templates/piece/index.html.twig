{% extends 'base.html.twig' %}

{% block title %}Piece Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center"><strong>Pièces</strong></h1>
        <div class="d-flex justify-content-between mb-4">

            <form class="form-inline" method="get" action="{{ path('app_piece_index') }}">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <a href="{{ path('app_piece_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer
            </a>
        </div>
        
        <div class="row">
            {% for piece in pieces %}
                <div class="col-md-4 mb-4" >
                    <div class="card h-100 anim" style="animation-delay: {{ loop.index0 * 0.2 }}s;">
                        <div class="card-body">
                            <p class="card-text text-center"><strong><h3 class="text-center">{{ piece.name }}</strong></h3></p>
                            <p class="card-text text-center"><strong>Réference:</strong> {{ piece.ref }}</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="{{ path('app_piece_show', {'id': piece.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_piece_edit', {'id': piece.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('piece/_delete_form.html.twig', {'class': 'd-inline'}) }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center" role="alert">
                        Aucune pièce trouvée.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
